{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
    "id": "f2b103f1-1ab1-4e1b-8f0b-072aa3d4e19d",
    "manifestVersion": "1.17",
    "version": "1.0.5",
    "name": {
      "short": "Contoso Task Pane Add-in",
      "full": "Contoso Task Pane Add-in"
    },
    "description": {
      "short": "SingleCase Outlook Add-in",
      "full": "SingleCase Outlook Add-in je pokročilé řešení pro synchronizovaní pošty a dokumentů na spis."
    },
    "developer": {
      "name": "Contoso",
      "websiteUrl": "https://www.contoso.com",
      "privacyUrl": "https://www.contoso.com/privacy",
      "termsOfUseUrl": "https://www.contoso.com/servicesagreement"
    },
    "icons": {
      "outline": "https://localhost:3000/assets/sc.png",
      "color": "https://localhost:3000/assets/sc.png"
    },
    "accentColor": "#230201",
    "localizationInfo": {
      "defaultLanguageTag": "en-us",
      "additionalLanguages": []
    },
    "authorization": {
      "permissions": {
        "resourceSpecific": [
          {
            "name": "Mailbox.ReadWrite.User",
            "type": "Delegated"
          }
        ]
      }
    },
    "validDomains": ["localhost", "127.0.0.1", "contoso.com"],
    "extensions": [
      {
        "requirements": {
          "scopes": ["mail"],
          "capabilities": [
            { "name": "Mailbox", "minVersion": "1.3" }
          ]
        },
        "runtimes": [
          {
            "requirements": {
              "capabilities": [
                { "name": "Mailbox", "minVersion": "1.3" }
              ]
            },
            "id": "TaskPaneRuntime",
            "type": "general",
            "code": {
              "page": "https://localhost:3000/taskpane.html"
            },
            "lifetime": "long",
            "actions": [
              {
                "id": "TaskPaneRuntimeShow",
                "type":"openPage",
                "pinnable": true,
                "view": "dashboard"
              }
            ]
          },
          {
            "id": "CommandsRuntime",
            "type": "general",
            "code": {
              "page": "https://localhost:3000/commands.html",
              "script": "https://localhost:3000/commands.js"
            },
            "lifetime": "long",
            "actions": [
              {
                "id": "action",
                "type": "executeFunction"
              }
            ]
          }
        ],
        "ribbons": [
          {
            "contexts": ["mailCompose"],
            "tabs": [
              {
                "builtInTabId": "TabDefault",
                "groups": [
                  {
                    "id": "msgComposeGroup",
                    "label": "Contoso Add-in",
                    "icons": [
                      { "size": 16, "url": "https://localhost:3000/assets/sc.png" },
                      { "size": 32, "url": "https://localhost:3000/assets/sc.png" },
                      { "size": 80, "url": "https://localhost:3000/assets/sc.png" }
                    ],
                    "controls": [
                      {
                        "id": "msgComposeOpenPaneButton",
                        "type": "button",
                        "label": "Show Task Pane",
                        "icons": [
                          { "size": 16, "url": "https://localhost:3000/assets/sc.png" },
                          { "size": 32, "url": "https://localhost:3000/assets/sc.png" },
                          { "size": 80, "url": "https://localhost:3000/assets/sc.png" }
                        ],
                        "supertip": {
                          "title": "Show Task Pane",
                          "description": "Opens a task pane."
                        },
                        "actionId": "TaskPaneRuntimeShow"
                      },
                      {
                        "id": "ActionButton",
                        "type": "button",
                        "label": "Perform an action",
                        "icons": [
                          { "size": 16, "url": "https://localhost:3000/assets/sc.png" },
                          { "size": 32, "url": "https://localhost:3000/assets/sc.png" },
                          { "size": 80, "url": "https://localhost:3000/assets/sc.png" }
                        ],
                        "supertip": {
                          "title": "Perform an action",
                          "description": "Perform an action when clicked."
                        },
                        "actionId": "action"
                      }
                    ]
                  }
                ]
              }
            ]
          },
        
          {
            "contexts": ["mailRead"],
            "tabs": [
              {
                "builtInTabId": "TabDefault",
                "groups": [
                  {
                    "id": "msgReadGroup",
                    "label": "SingleCase",
                    "icons": [
                      { "size": 16, "url": "https://localhost:3000/assets/sc.png" },
                      { "size": 32, "url": "https://localhost:3000/assets/sc.png" },
                      { "size": 80, "url": "https://localhost:3000/assets/sc.png" }
                    ],
                    "controls": [
                      {
                        "id": "msgReadOpenPaneButton",
                        "type": "button",
                        "label": "Open SingleCase",
                        "icons": [
                          { "size": 16, "url": "https://localhost:3000/assets/sc.png" },
                          { "size": 32, "url": "https://localhost:3000/assets/sc.png" },
                          { "size": 80, "url": "https://localhost:3000/assets/sc.png" }
                        ],
                        "supertip": {
                          "title": "Open SingleCase",
                          "description": "Opens the SingleCase task pane."
                        },
                        "actionId": "TaskPaneRuntimeShow"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
        
      }
    ]
  }
